{
	"name": "obsidian-file-metadata-decorator",
	"version": "1.0.0",
	"description": "This is a sample plugin for Obsidian (https://obsidian.md)",
	"main": "main.js",
	"scripts": {
		"tsc": "tsc -noEmit",
		"tsc:watch": "tsc -noEmit --watch",
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"playground:build": "node playground.build.mjs",
		"playground:watch": "node playground.build.mjs --watch",
		"version": "node version-bump.mjs && git add manifest.json versions.json package.json && npm run check",
		"lint": "biome lint --write",
		"format": "biome format --write && remark . --output",
		"check": "biome check --write  --diagnostic-level=warn",
		"ci": "biome ci --diagnostic-level=warn",
		"prepare": "husky"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"husky": "^9.1.7",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "^5.9.3"
	},
	"remarkConfig": {
		"settings": {
			"bullet": "-"
		},
		"plugins": [
			"remark-preset-lint-recommended"
		]
	},
	"dependencies": {
		"zod": "^4.3.5"
	}
}
